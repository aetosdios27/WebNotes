// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  // ✅ No hardcoded URL here (handled by prisma.config.ts and runtime)
}

generator client {
  provider        = "prisma-client-js"
  // ✅ Required to use the Pool in Production
  previewFeatures = ["driverAdapters"]
}

// ============================================================================
// AUTH MODELS
// ============================================================================

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  emailVerified  DateTime?     @map("email_verified")
  name           String?
  image          String?
  accounts       Account[]
  sessions       Session[]
  notes          Note[]
  folders        Folder[]
  noteVersions   NoteVersion[]
  hasSeenWelcome Boolean       @default(false) @map("has_seen_welcome")

  @@map("users")
}

model Account {
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ✅ Index for auth performance
  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

// ============================================================================
// APPLICATION MODELS
// ============================================================================

model Folder {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  notes     Note[]

  // ✅ Indexes for sidebar performance
  @@index([userId])
  @@index([userId, createdAt])
  @@map("folders")
}

model Note {
  id    String  @id @default(cuid())
  title String?

  // ✅ Keep content for search/fallback
  content String? @db.Text

  // ✅ CRDT Binary State
  yjsState Bytes? @map("yjs_state")

  // ✅ Optimistic Locking Version
  version Int @default(0)

  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  isPinned  Boolean       @default(false) @map("is_pinned")
  pinnedAt  DateTime?     @map("pinned_at")
  font      String?
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String        @map("user_id")
  folder    Folder?       @relation(fields: [folderId], references: [id], onDelete: SetNull)
  folderId  String?       @map("folder_id")
  versions  NoteVersion[]

  // ✅ Critical Query Indexes
  @@index([userId])
  @@index([userId, folderId])
  @@index([userId, isPinned, pinnedAt, updatedAt])
  @@index([updatedAt])
  @@map("notes")
}

// ============================================================================
// VERSION HISTORY
// ============================================================================

model NoteVersion {
  id         String   @id @default(cuid())
  noteId     String   @map("note_id")
  content    String   @db.Text
  title      String?
  createdAt  DateTime @default(now()) @map("created_at")
  changeType String   @default("auto") @map("change_type")
  note       Note     @relation(fields: [noteId], references: [id], onDelete: Cascade)
  userId     String?  @map("user_id")
  user       User?    @relation(fields: [userId], references: [id])

  // ✅ Indexes for cleanup jobs
  @@index([noteId, createdAt])
  @@index([userId])
  @@index([changeType, createdAt])
  @@map("note_versions")
}
